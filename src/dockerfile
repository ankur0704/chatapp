# Use the official Node.js image
FROM node:18

# Set working directory
WORKDIR /app

# Copy all frontend files (make sure your tsconfig.json and src/ directory are present in the context)
COPY . .

# Install dependencies
RUN npm install

# Build the Vite app
RUN npm run build

# Install serve to serve the static files
RUN npm install -g serve

# Expose port
EXPOSE 3000

# Run the app
CMD ["serve", "-s", "dist", "-l", "3000"]

